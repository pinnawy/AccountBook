<navigation:Page x:Class="AccountBook.Silverlight.Views.Statistics" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           d:DesignWidth="640" d:DesignHeight="480"
           Title="Statistics Page">
        <Grid x:Name="LayoutRoot">
            <StackPanel Name="LoadXapProgressPanel"
                    VerticalAlignment="Center"
                    Margin="20,0">
                <TextBlock>
                <Run Text="Loading Statistics Module: " ></Run>
                <Run x:Name="XapLoadText" Text="0"></Run>
                <Run Text="%"></Run>
                </TextBlock>
                <ProgressBar Name="XapLoadProgress" Maximum="100" Height="20"></ProgressBar>
            </StackPanel>
        </Grid>
</navigation:Page>
